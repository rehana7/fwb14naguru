extends layout

block content
  h1= title
  p Welcome to Nuts
   div(class="container-fluid")
        div(class="row")
                let nuts = [
                    {
                        "Itemname": "Almonds",
                        "Quantity": 5,
                        "price": 100
                    },
                    {
                        "Itemname": "Pistachios",
                        "Quantity": 4,
                        "price": 80
                    },
                    {
                        "Itemname": "Cashews",
                        "Quantity": 2,
                        "price": 40
                    },                   
                ]
            each v,index in nuts
                table(style='width:100%', border='2')
                  tr 
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(item)
        {
              alert(`Your Pancake is ${item + 1}`)
        }